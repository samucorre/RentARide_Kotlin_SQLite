<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/yellowRRRbackGround"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/idPrestamoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID PrÃ©stamo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FFC107"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idPrestamoTextView" />

        <TextView
            android:id="@+id/idArticuloTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID Articulo"
            android:drawableStart="@drawable/ico_articulo"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/idSocioTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID Socio"
            android:drawableStart="@drawable/ico_socio"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idArticuloTextView" />

        <TextView
            android:id="@+id/fechaInicioTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha Inicio"
            android:drawableStart="@drawable/ico_fecha"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idSocioTextView" />

        <TextView
            android:id="@+id/fechaFinTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha Fin"
            android:drawableStart="@drawable/ico_fecha_fin"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fechaInicioTextView" />

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Info"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ico_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fechaFinTextView" />

        <TextView
            android:id="@+id/estadoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>